{
  "name": "stack-vdev",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "dev": "bun run scripts/dev.ts",
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "bun run --filter '*' typecheck",
    "db:migrate": "bun run --filter @repo/db migrate",
    "db:seed": "bun run --filter @repo/db seed",
    "db:studio": "bun run --filter @repo/db studio",
    "new-project": "bun run scripts/new-project.ts",
    "health-check": "bun run scripts/health-check.ts",
    "verify-clerk": "bun run scripts/verify-clerk.ts",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/bun": "latest",
    "typescript": "^5.8.0"
  }
}
